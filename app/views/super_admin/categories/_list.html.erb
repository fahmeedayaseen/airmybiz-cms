<table class="table table-striped table-bordered table-hover" id="category_table">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      Sub Category Count
    </th>
    <th>
      Category Item Count
    </th>
    <th>
      Created
    </th>
    <th style="width: 120px">
      Action
    </th>
  </tr>
  </thead>
  <% unless @categories.blank? %>
      <tbody>
      <% @categories.each_with_index do |category, index| %>
          <tr class="odd gradeX">

            <td>
              <%= category.name %>
            </td>
            <td>
              <%= category.sub_categories.size %>
            </td>
            <% count = 0 %>
            <% category.sub_categories.each do |category| %>
                <% count += category.items.size %>
            <% end %>
            <td class="center">
              <%= count %>
            </td>
            <td class="center">
              <%= category.created_at.strftime("%m-%d-%Y  %H:%M:%S %p") %>
            </td>
            <td>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_category_path(category.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_category_path(category.id), :style => "text-decoration:none" %>
            </td>
          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>


