<div class="row">
  <div class="col-md-12">
    <!-- BEGIN PAGE TITLE & BREADCRUMB-->
    <h3 class="page-title">
      Manage Customers
    </h3>
    <ul class="page-breadcrumb breadcrumb">
      <li>
        <i class="fa fa-home"></i>
        <a href="/super_admin/dashboard">Home</a>
        <i class="fa fa-angle-right"></i>
      </li>
      <li>
        <a href="/super_admin/customers">Customers</a>
      </li>

    </ul>
    <!-- END PAGE TITLE & BREADCRUMB-->
  </div>
</div>
<!-- END PAGE HEADER-->

<div class="row">
  <div class="col-md-6 ">
    <!-- BEGIN SAMPLE FORM PORTLET-->
    <div class="portlet box blue">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-gift"></i> Edit Customer
        </div>
        <div class="tools">
          <a class="collapse" href="">
          </a>

        </div>
      </div>
      <div class="portlet-body form">
        <%= form_for(@user, :url => super_admin_customer_path, :method => "put", :html => {:multipart => true}) do |f| %>
            <%= f.hidden_field :status, :value => "active" %>
            <div class="form-body">
              <div class="row" id="errors"></div>
              <div class="form-group">
                <label>Email</label>

                <div class="input-group">
                  <%= f.text_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email" %>
                </div>
              </div>
              <div class="form-group">
                <label>Name</label>

                <div class="input-group">
                  <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %>
                </div>
              </div>


              <div class="form-group">
                <label>Password</label>

                <div class="input-group">
                  <%= f.password_field :password, :class => "form-control", :placeholder => "Password *" %>
                </div>
              </div>

              <div class="form-group">
                <label>Confirm</label>

                <div class="input-group">
                  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password *" %>
                </div>
              </div>

            </div>
            <div class="form-actions">
              <div class="z_100" id="save-btn">
                <a class="btn blue" href="javascript:void(0)">Save</a>
              </div>
              <!--<button class="btn blue" type="submit">Update</button>-->
              <%#= f.submit "Save", :class => "btn blue" %>
            </div>
        <% end %>
      </div>
    </div>
    <!-- END SAMPLE FORM PORTLET-->

  </div>
</div>

<div class="clearfix">
</div>

</div>


<script type="text/javascript">

    $(document).ready(function () {

        var placeholder = " ";
        $("input[type=text],input[type=email],input[type=password]").focus(function () {
            placeholder = $(this).attr("placeholder");
            return $(this).attr("placeholder", " ");
        });
        $("input[type=text],input[type=email],input[type=password]").blur(function () {
            if ($(this).val() === "") {
                return $(this).attr("placeholder", placeholder);
            }
        });


        $("#save-btn").children("a").click(function () {
            $("#ajax_loader").show();
            $(".shadow").show();
            $.post($(this).parents("form").attr("action"), $(this).parents("form").serialize(), (function (response) {
                if (response.success) {
                    window.location.href = response.url
                } else {
                    $("#errors").html(response.html);
                    $("#ajax_loader").hide();
                    $(".shadow").hide();
                }

            }), "json");
            return false;

        });

    });


</script>
